<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '1' %>
       <h2>Basic Account</h2> 
       <p>Sign up for free now and get basic access to the community.</p>
    <% else %>
      <h2>Pro Account</h2>
      <p>Sign up for pro account at $10/mo and get access to the community and contact information!</p>
    <% end %>
    
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
    <h2>Sign up</h2>
    <% if params[:plan] == '1' %>
      <%= render "basic_form" %>
    <% else %>
      <%= render "pro_form" %>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>