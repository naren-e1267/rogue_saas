<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url, class: 'user-show-avatar' %>
    </div>
    <div class="col-md-6">
        <h1><span class="title-icon"><%= title_icon %></span> <%= @user.profile.title %> <%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        
        <div class="well profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
        
        <% if current_user.plan_id == 2 %>
        <div class="contact-info well">
            <h3>Contact Info</h3>
            <%= @user.profile.phone_number %><br>
            <%= @user.profile.contact_email %><br>
            <% end %>
        </div>
    </div>
</div>